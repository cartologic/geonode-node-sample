<%- include('parts/header')%>
<%- include('components/navbar')%>

  <div class="screen">
    <div class="auth-form-container">
      <h1>Login</h1>
      <form action="/login" method="POST" autocomplete="off">
          <input type="text" class="form-control" name="username" placeholder="Usename" value="" >
          <% let usernameError = validationErrors.find(err => err.param === 'username') %>
          <% if (usernameError) { %>
              <p class="alert alert-danger">
                  <%= usernameError.msg %>
              </p>
          <% } %>
          <input type="password" class="form-control" name="password" placeholder="Password" value="">
          <% let passwordError = validationErrors.find(err => err.param === 'password') %>
          <% if (passwordError) { %>
              <p class="alert alert-danger">
                  <%= passwordError.msg %>
              </p>
          <% } %>
          <input type="submit" value="Login" class="submit-btn">
      </form>
      <% if(authError) { %>
        <br>
        <p class="alert alert-danger">
            <%= authError%>
        </p>
      <% } %>
    </div>
    <br>
    <div>
      Don't have account ? <a href="#">Create Account</a>
    </div>

</div>

<%- include('parts/scripts')%>

</body>
</html>